class TekkenCharacter:
    def __init__(self, name, ability):
        self.name = name
        self.ability = ability

    def introduce(self, func):
        def wrapper():
            print("Introducing...")
            func()
            print("This character is amazing!")
        return wrapper

def character_intro():
    print(f"I am {character.name} and I can use {character.ability}.")

character = TekkenCharacter("Nina", "Fatal Judgement")
character.character_intro = character.introduce(character_intro)
character.character_intro()
